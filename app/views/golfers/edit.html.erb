<!-- Validation failure messages -->

<% if @golfer.errors.any? %>
  <% @golfer.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Golfer #<%= @golfer.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_golfer/<%= @golfer.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for picture -->
          <div class="form-group">
            <label for="picture" class="col-sm-2 control-label">
              Picture
            </label>
            <div class="col-sm-10">
              <input type="text" id="picture" name="picture" placeholder="Picture" class="form-control" value="<%= @golfer.picture %>">
            </div>
          </div>

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @golfer.name %>">
            </div>
          </div>

          <!-- Label and input for key -->
          <div class="form-group">
            <label for="key" class="col-sm-2 control-label">
              Key
            </label>
            <div class="col-sm-10">
              <input type="text" id="key" name="key" placeholder="Key" class="form-control" value="<%= @golfer.key %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Golfer
              </button>
              or
              <a href="/golfers/<%= @golfer.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
