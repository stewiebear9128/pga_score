<!-- Validation failure messages -->

<% if @registration.errors.any? %>
  <% @registration.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Registration</h3>
      </div>
      <div class="panel-body">
        <form action="/create_registration" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for tournament_id -->
          <div class="form-group">
            <label for="tournament_id" class="col-sm-2 control-label">
              Tournament
            </label>
            <div class="col-sm-10">
              <input type="text" id="tournament_id" name="tournament_id" placeholder="Tournament" class="form-control" value="<%= @registration.tournament_id %>">
            </div>
          </div>

          <!-- Label and input for golfer_id -->
          <div class="form-group">
            <label for="golfer_id" class="col-sm-2 control-label">
              Golfer
            </label>
            <div class="col-sm-10">
              <input type="text" id="golfer_id" name="golfer_id" placeholder="Golfer" class="form-control" value="<%= @registration.golfer_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Registration
              </button>
              or
              <a href="/registrations">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
