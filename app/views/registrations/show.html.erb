<!-- Responsive panel example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Registration #<%= @registration.id %></h3>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <dl class="dl-horizontal">
              <dt>Tournament</dt>
              <dd><%= @registration.tournament_id %></dd>

              <dt>Golfer</dt>
              <dd><%= @registration.golfer_id %></dd>

              <dt>Golfer Name</dt>
              <dd><%= @registration.golfer.name + ' ' + @registration.golfer.lastname%></dd>

               <dt>World Golf Ranking</dt>
              <dd><%= @registration.wg_ranking %></dd>
               <dt>Flight</dt>
              <dd><%= @registration.flight %></dd>

            </dl>
            <div class="btn-group btn-group-justified">
              <a href="/registrations" class="btn btn-primary">
                <i class="fa fa-chevron-left"></i>
              </a>

              <a href="/registrations/<%= @registration.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>

              <a href="/delete_registration/<%= @registration.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
