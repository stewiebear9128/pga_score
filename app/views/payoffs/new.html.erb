<!-- Validation failure messages -->

<% if @payoff.errors.any? %>
  <% @payoff.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Payoff</h3>
      </div>
      <div class="panel-body">
        <form action="/create_payoff" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for payout -->
          <div class="form-group">
            <label for="payout" class="col-sm-2 control-label">
              Payout
            </label>
            <div class="col-sm-10">
              <input type="text" id="payout" name="payout" placeholder="Payout" class="form-control" value="<%= @payoff.payout %>">
            </div>
          </div>

          <!-- Label and input for place -->
          <div class="form-group">
            <label for="place" class="col-sm-2 control-label">
              Place
            </label>
            <div class="col-sm-10">
              <input type="text" id="place" name="place" placeholder="Place" class="form-control" value="<%= @payoff.place %>">
            </div>
          </div>

          <!-- Label and input for tournament_id -->
          <div class="form-group">
            <label for="tournament_id" class="col-sm-2 control-label">
              Tournament
            </label>
            <div class="col-sm-10">
              <input type="text" id="tournament_id" name="tournament_id" placeholder="Tournament" class="form-control" value="<%= @payoff.tournament_id %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Payoff
              </button>
              or
              <a href="/payoffs">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
