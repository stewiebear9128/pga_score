<!-- Validation failure messages -->

<% if @entry.errors.any? %>
  <% @entry.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Entry #<%= @entry.id %></h3>
      </div>
      <div class="panel-body">
       <table>
        <tr>
          <td>User</td>
          <td><%= current_user.userid %></td>
        </tr>
        <tr>
          <td>You are editing an entry to:</td>
          <td><%=@entry.pool.name%></td>
        </tr>
        <tr>
          <td>Current Place</td>
          <td><%=@entry.current_place%></td>
        </tr>
        <tr>
          <td>Current Payoff</td>
          <td><%= @entry.current_payoff %></td>
        </tr>
        </table>
        <form action="/update_entry/<%= @entry.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for golfer_a -->
          <div class="form-group">
            <label for="golfer_a" class="col-sm-2 control-label">
              Golfer a
            </label>
            <div class="col-sm-10">
              <%= select_tag(:golfer_a, options_for_select(@optionsA, @entry.golfer_a), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for golfer_b -->
          <div class="form-group">
            <label for="golfer_b" class="col-sm-2 control-label">
              Golfer b
            </label>
            <div class="col-sm-10">
              <%= select_tag(:golfer_b, options_for_select(@optionsB, @entry.golfer_b), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for golfer_c -->
          <div class="form-group">
            <label for="golfer_c" class="col-sm-2 control-label">
              Golfer c
            </label>
            <div class="col-sm-10">
              <%= select_tag(:golfer_c, options_for_select(@optionsC, @entry.golfer_c), :class => "form-control") %>
            </div>
          </div>

           <!-- Label and input for golfer_d -->
          <div class="form-group">
            <label for="golfer_d" class="col-sm-2 control-label">
              Golfer d
            </label>
            <div class="col-sm-10">
              <%= select_tag(:golfer_d, options_for_select(@optionsD, @entry.golfer_d), :class => "form-control") %>
            </div>
          </div>

          <!-- Label and input for golfer_flex -->
          <div class="form-group">
            <label for="golfer_flex" class="col-sm-2 control-label">
              Golfer flex
            </label>
            <div class="col-sm-10">
              <%= select_tag(:golfer_flex, options_for_select(@options, @entry.golfer_flex), :class => "form-control") %>
            </div>
          </div>


          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Entry
              </button>
              or
              <a href="/entries/<%= @entry.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
